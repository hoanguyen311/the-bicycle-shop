.icon {
    display: inline-block;
    &_valign_middle {
        vertical-align: middle;
    }
}
{{#block "sprites"}}
{{#each sprites}}
.{{pack}}_{{name}} {
    background-image: url({{{escaped_image}}});
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
    {{#if size}}
        background-size: {{size}}
    {{/if}}
}
{{/each}}
{{/block}}
