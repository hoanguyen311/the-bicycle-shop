{% extends "../layouts/default.twig" %}

{% block header %}
    {% embed "../components/header.twig" %}
        {% block headerModClasses %}l-header_page_product{% endblock %}
        {% block headerLeft %}
            <div class="l-header__inner-left-item">
                {% include '../components/cart-account.twig' %}
            </div>
        {% endblock %}

        {% block headerBanner %}
            <img src="/images/banners/banner-1.jpg" alt="" class="l-header__banner-image">
        {% endblock %}

    {% endembed %}
{% endblock %}

{% block sidebarItems %}
    <div class="l-sidebar__item">
        {% include "../components/aside-menu.twig" with categoriesMenu only %}
    </div>
    <div class="l-sidebar__item">
        {% include '../components/box.twig' with
            {
                mods: 'l-box_bg_grey l-box_style_store-status',
                heading: 'Now is open'
            }
        %}
    </div>
    <div class="l-sidebar__item">
        {% include "../components/tags-widget.twig" %}
    </div>
{% endblock %}

{% block content %}
    {% include "../components/breadcrumb.twig" %}
    <div class="row">
        <div class="col-xs-5">
            {% include "../components/product-image.twig" %}
        </div>
        <div class="col-xs-7">
            {% include "../components/product-description.twig" %}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {% include "../components/tab.twig" %}
        </div>
    </div>
    {% include "../components/product-slider.twig" with {
        classMix: 'product-slider_style_recommended'
    } only %}
    {% include "../components/product-slider.twig" with {
        classMix: 'product-slider_style_recommended'
    } only %}
{% endblock %}
